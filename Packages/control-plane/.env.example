# Control Plane - Environment Variables
# Copy to .env for local dev. K8s: use ConfigMap/Secret.

# Server
PORT=3000

# Redis (BullMQ, Channels, ClusterDirectory)
REDIS_HOST=localhost
REDIS_PORT=6379

# Cluster (multi-node)
NODE_ID=
CLUSTER_DIRECTORY_TTL_SECONDS=8

# Matchmaking
MATCHMAKING_ROLE=all
MATCHMAKING_MIN_WAIT_MS=3000
MATCHMAKING_RELAX_AFTER_MS=30000
# Use node inbox for match.assigned (multi-node routing). Fallback to broadcast when getNodeId is null.
USE_NODE_INBOX_FOR_MATCH_ASSIGNED=true
