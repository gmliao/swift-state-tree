{
  "maxDuration": 5000,
  "steps": [
    {
      "type": "log",
      "message": "Testing Tick handler - ticks should auto-increment every 300ms"
    },
    {
      "type": "wait",
      "wait": 500
    },
    {
      "type": "assert",
      "assert": {
        "path": "ticks",
        "exists": true,
        "message": "ticks should exist after first sync"
      }
    },
    {
      "type": "wait",
      "wait": 200
    },
    {
      "type": "assert",
      "assert": {
        "path": "ticks",
        "greaterThanOrEqual": 1,
        "message": "ticks should be at least 1 after first tick"
      }
    },
    {
      "type": "wait",
      "wait": 500
    },
    {
      "type": "assert",
      "assert": {
        "path": "ticks",
        "greaterThanOrEqual": 2,
        "message": "ticks should be at least 2 after another tick"
      }
    }
  ]
}
