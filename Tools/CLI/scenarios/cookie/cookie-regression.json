{
  "maxDuration": 20000,
  "steps": [
    {
      "type": "log",
      "message": "Testing cookie game actions - success cases"
    },
    {
      "type": "action",
      "action": "BuyUpgradeAction",
      "payload": {
        "upgradeID": "cursor"
      }
    },
    {
      "type": "wait",
      "wait": 500
    },
    {
      "type": "action",
      "action": "BuyUpgradeAction",
      "payload": {
        "upgradeID": "grandma"
      }
    },
    {
      "type": "wait",
      "wait": 500
    },
    {
      "type": "log",
      "message": "Testing error cases - expected failures"
    },
    {
      "type": "action",
      "action": "NonExistentAction",
      "payload": {},
      "expectError": true,
      "errorCode": "ACTION_NOT_REGISTERED"
    },
    {
      "type": "wait",
      "wait": 500
    },
    {
      "type": "assert",
      "assert": {
        "path": "privateStates",
        "exists": true,
        "message": "privateStates should exist after actions"
      }
    },
    {
      "type": "log",
      "message": "âœ… All regression tests passed"
    }
  ]
}
