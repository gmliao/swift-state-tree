{
    "maxDuration": 10000,
    "steps": [
        {
            "type": "log",
            "message": "Connecting to Counter Land..."
        },
        {
            "type": "action",
            "action": "Increment",
            "payload": {}
        },
        {
            "type": "waitForState",
            "waitForState": {
                "path": "count",
                "equals": 1,
                "timeout": 3000,
                "interval": 50,
                "message": "Count should be 1 after one increment"
            }
        },
        {
            "type": "assert",
            "assert": {
                "path": "count",
                "equals": 1,
                "message": "Count should be 1 after one increment"
            }
        }
    ]
}
